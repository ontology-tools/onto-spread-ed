{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "term": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1,
          "pattern": "^[A-Za-z0-9_]+:[0-9]+$"
        },
        "label": {
          "type": "string",
          "minLength": 1
        },
        "parent": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": ["id"],
      "additionalProperties": false
    }
  },
  "required": ["term"],
  "additionalProperties": false
}
